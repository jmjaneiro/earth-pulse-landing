generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
}

model PostHistory {
  id        String   @id @default(uuid())
  platform  String   // "farcaster" | "x_manual"
  status    String   // "success" | "failed" | "copied"
  content   String
  mediaUrl  String?
  zoraUrl   String?
  createdAt DateTime @default(now())
}
